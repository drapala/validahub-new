{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["NEXT_PUBLIC_*", "DATABASE_URL", "REDIS_URL"]
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "typecheck": {
      "outputs": []
    },
    "test": {
      "outputs": [],
      "cache": false
    },
    "test:ci": {
      "outputs": [],
      "cache": false,
      "dependsOn": []
    },
    "clean": {
      "cache": false
    },
    "db:migrate": {
      "cache": false,
      "outputs": []
    },
    "db:generate": {
      "cache": false,
      "outputs": []
    }
  }
}