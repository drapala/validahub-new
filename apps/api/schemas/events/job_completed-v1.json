{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "job_completed-v1",
  "title": "Job Completed Event",
  "description": "Event emitted when a job completes successfully",
  "type": "object",
  "required": ["event_id", "event_name", "version", "timestamp", "partition_key", "payload"],
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this event instance"
    },
    "event_name": {
      "type": "string",
      "const": "job.completed"
    },
    "version": {
      "type": "string",
      "const": "v1"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when the event occurred"
    },
    "partition_key": {
      "type": "string",
      "pattern": "^[^:]+:[^:]+:[^:]+$",
      "description": "Partition key in format marketplace:category:region"
    },
    "correlation_id": {
      "type": "string",
      "description": "Correlation ID for tracing related events"
    },
    "payload": {
      "type": "object",
      "required": ["job_id", "task", "timestamp", "marketplace", "category", "region", "metrics", "result_summary"],
      "properties": {
        "job_id": {
          "type": "string",
          "format": "uuid"
        },
        "task": {
          "type": "string",
          "description": "Task name that was executed"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "marketplace": {
          "type": "string"
        },
        "category": {
          "type": "string"
        },
        "region": {
          "type": "string"
        },
        "metrics": {
          "type": "object",
          "properties": {
            "latency_ms": {
              "type": "integer",
              "minimum": 0
            },
            "payload_size_bytes": {
              "type": "integer",
              "minimum": 0
            },
            "total_rows": {
              "type": "integer",
              "minimum": 0
            },
            "valid_rows": {
              "type": "integer",
              "minimum": 0
            },
            "error_rows": {
              "type": "integer",
              "minimum": 0
            },
            "warning_rows": {
              "type": "integer",
              "minimum": 0
            },
            "error_rate": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "warning_rate": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "errors_by_field": {
              "type": "object",
              "additionalProperties": {
                "type": "integer"
              }
            }
          }
        },
        "result_summary": {
          "type": "object",
          "required": ["status"],
          "properties": {
            "status": {
              "type": "string",
              "enum": ["success", "partial", "complete"]
            },
            "result_ref": {
              "type": "string",
              "description": "Reference to stored result (S3 URI or file path)"
            }
          }
        }
      }
    }
  }
}