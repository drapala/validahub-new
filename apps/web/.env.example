# ==============================================================================
# ENVIRONMENT VARIABLES - EXAMPLE FILE
# ==============================================================================
# Copy this file to .env.local and fill in the values
# Never commit .env.local to version control!

# ==============================================================================
# AUTHENTICATION
# ==============================================================================
# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-minimum-32-characters-change-in-production
JWT_SECRET=your-jwt-secret-key-change-in-production

# ==============================================================================
# OAUTH PROVIDERS
# ==============================================================================
# Google OAuth (get from https://console.cloud.google.com)
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret-from-google
ENABLE_GOOGLE_LOGIN=true
ENABLE_EMAIL_LOGIN=true

# ==============================================================================
# API CONFIGURATION
# ==============================================================================
# Backend API URLs
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
BACKEND_BASE_URL=http://localhost:8000

# ==============================================================================
# DATABASE (if using direct connection)
# ==============================================================================
# DATABASE_URL=postgresql://user:password@localhost:5432/validahub

# ==============================================================================
# REDIS (optional, for caching)
# ==============================================================================
# REDIS_URL=redis://localhost:6379

# ==============================================================================
# AWS S3 (optional, for file storage)
# ==============================================================================
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=validahub-uploads

# ==============================================================================
# GOOGLE TAG MANAGER (optional, for analytics)
# ==============================================================================
# NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# ==============================================================================
# ENVIRONMENT
# ==============================================================================
NODE_ENV=development

# ==============================================================================
# FEATURE FLAGS (optional)
# ==============================================================================
# FEATURE_WEBHOOKS_ENABLED=true
# FEATURE_ASYNC_JOBS_ENABLED=true
